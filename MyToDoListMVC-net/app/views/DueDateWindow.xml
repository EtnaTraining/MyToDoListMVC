<Alloy>
       <!-- iOS -->
	
	<NavigationWindow id="rootWin" platform="ios">
        <Window modal="true" backgroundColor="white" title="Seleziona scadenza">
                <RightNavButton platform="ios">
                        <Button onClick="closeWindow">Close</Button>
                </RightNavButton>
                <Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" top="30" onChange="dataSelezionata"/>
        </Window>
     </NavigationWindow>
     
     <!-- Android -->
     
     <Window id="rootWin" platform="android" modal="true" backgroundColor="white" title="Seleziona scadenza">
                <Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" top="30" onChange="dataSelezionata"/>
                <Button id="closeWindow"  onClick="closeWindow">Chiudi</Button>
     </Window>
</Alloy>