<Alloy>
        <Collection src="todo"/>
        <Window class="container" title="List of ToDos">
                <TableView id="todoListTV" dataCollection="todo" dataTransform="addImagePath" editable="true" onClick="editToDo">
                        <TableViewRow hasChild="true">
                     		<ImageView image="{image}"/>
                     		<Label text="{title}" />
                     	</TableViewRow>
                </TableView>
        </Window>
</Alloy>