<Alloy>
        <Collection src="ToDo">
        <Window class="container" title="List of ToDos">
                <TableView id="todoListTV" dataCollection="ToDo" editable="true" onClick="editToDo">
                        <TableViewRow hasChild="true">
                     		<ImageView image="{path}"/>
                     		<Label text="{title}" />
                     	</TableViewRow>
                </TableView>
        </Window>
</Alloy>