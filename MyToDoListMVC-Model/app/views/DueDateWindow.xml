<Alloy>
  
	<!-- iOS Window -->
	<NavigationWindow id="rootWin" platform="ios" modal="true">
        <Window backgroundColor="white" title="Seleziona scadenza">
            <RightNavButton>
                <Button onClick="closeWindow">Close</Button>
            </RightNavButton>
            <Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" onChange="dataSelezionata"/>
        </Window>
    </NavigationWindow>

    <!-- Android Window -->
    <Window id="rootWin" platform="android" backgroundColor="white" title="Seleziona scadenza" >
                <Picker id="picker" type="Ti.UI.PICKER_TYPE_DATE" onChange="dataSelezionata"/>
                <Button id="closeWindow"  onClick="closeWindow">Chiudi</Button>
    </Window>

</Alloy>