<Alloy>
        <Collection src="todo"/>
        <Window class="container" title="List of ToDo">
        	<RightNavButton>
        		<Button id="reload" onClick="reload"/>
        	</RightNavButton>
        	<Menu id="menu2" platform="android">
				<MenuItem id="reload" title="Reload" onClick="reload" />
			</Menu>
                <TableView id="todoListTV" dataCollection="todo" dataTransform="defaultThumb" editable="true" onClick="editToDo">
                         <TableViewRow leftImage="{path}" title="{title}" hasChild="true" />
                </TableView>
        </Window>
</Alloy>